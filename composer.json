{
    "name": "sloth-dev-guy/searches",
    "description": "Perform searches with Eloquent models using an array-like API setup",
    "keywords": [
        "laravel",
        "eloquent",
        "search",
        "query-builder",
        "database",
        "model",
        "generator"
    ],
    "homepage": "https://github.com/sloth-dev-guy/searches",
    "authors": [
        {
            "name": "Telmo Rafael",
            "email": "sloth.dev.guy@gmail.com",
            "homepage": "https://sloth-guy.dev"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "illuminate/support": "^9.0|^10.0|^11.0",
        "illuminate/container": "^9.0|^10.0|^11.0",
        "illuminate/database": "^9.0|^10.0|^11.0",
        "illuminate/events": "^9.0|^10.0|^11.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "phpunit/phpunit": "^11.0",
        "mockery/mockery": "^1.6",
        "doctrine/dbal": "^2.13|^3.1",
        "vlucas/phpdotenv": "^5.4",
        "laravel/lumen-framework": "^9.0|^10.0|^11.0"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "SlothDevGuy\\Searches\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "suggest": {
        "laravel/lumen-framework": "Required to use defaults functionalities inherit to the laravel frameworks (laravel|lumen) (^9.0)",
        "illuminate/http": "Required to use custom requests object in controllers (^9.0)"
    },
    "extra": {
        "laravel": {
            "providers": [
                "SlothDevGuy\\Searches\\EloquentSearchServiceProvider"
            ]
        }
    }
}
